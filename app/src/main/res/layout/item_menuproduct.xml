<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="20dp"
    android:layout_width="323dp"
    android:layout_height="100dp"
    app:cardCornerRadius="15dp"
    android:layout_marginStart="28dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="20dp">

        <ImageView
            android:id="@+id/imgMenuProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/pic_menu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nameProductMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:text="Pepper Pizza"
            android:fontFamily="@font/red_hat_display_medium"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/imgMenuProduct"
            app:layout_constraintStart_toEndOf="@+id/imgMenuProduct"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/hintNameProductMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="5kg box of Pizza"
            android:fontFamily="@font/red_hat_display_medium"
            android:textColor="#8E8A8A"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/nameProductMenu"
            app:layout_constraintTop_toBottomOf="@+id/nameProductMenu" />

        <TextView
            android:id="@+id/priceProductMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/red_hat_display_bold"
            android:text="$15"
            android:textColor="@color/MainColor"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>